{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "mocha": true,
        "jest": true
    },
    "rules": {
        "react/jsx-filename-extension": 0,
        "react/jsx-indent": "off",
        "indent": ["error",4],
        "no-case-declarations": 0,
        "jsx-a11y/label-has-associated-control": [
            "error",
            {
                "required": {
                    "some": [
                        "nesting",
                        "id"
                    ]
                }
            }
        ],
        "jsx-a11y/label-has-for": [
            "error",
            {
                "required": {
                    "some": [
                        "nesting",
                        "id"
                    ]
                }
            }
        ],
        "react/destructuring-assignment": ["disabled", "always", { "ignoreClassFields": "false" }],
        "react/forbid-prop-types": ["enabled", { "forbid": ["any"], "checkContextTypes": false, "checkChildContextTypes": false }]
    }
}
